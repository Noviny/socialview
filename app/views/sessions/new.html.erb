<%= form_tag('/login', :method => :post) do  %>
  <%= label_tag(:email) %>
  <%= text_field_tag(:email, nil, :autofocus => true, :required => true) %>
  <%= label_tag(:password) %>
  <%= password_field_tag(:password, nil, :required => true) %>
  <%= submit_tag('Log in', :class => 'btn btn-default') %>
<% end %>